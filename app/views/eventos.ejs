            <% for (let i=0; i < eventos.length; i++) { %>
        <div class="scroll-container">
                    <h5 style="font-weight: bold;"> <%= eventos[i].nome %></h5>
                        <p> <%= eventos[i].lado %></p>
                    
        
                            <% const areaArray = JSON.parse(eventos[i].area); %>
